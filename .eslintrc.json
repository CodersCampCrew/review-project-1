{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "error",
    "no-empty-function": "error",
    "prefer-arrow-callback": "error",
    "import/prefer-default-export": "off"
  },
  "overrides": [
    {
      "files": ["**/*.spec.js", "**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
